# Tempo padrao usado caso não seja passado argumento para o script
tpadrao=120

# Ativa ou desativa o audio
mute=0

# Ativar ou desativar o alarme, necessario o mute estar desativado
tocaalarme=1

# Delay  em segundos entre os toque do alarme quando o tempo acabar
delayalarme=5

# Arquivo de audio que sera tocado
# O caminho padrao é do linux mint 21.3
audio="/usr/share/sounds/LinuxMint/stereo/button-toggle-off.ogg"

# Delay em segundos entre cada ação quando precionado a tecla n
delaycontagem=1

# Alterando entre os modos do script
# 0 script sem nenhuma cor, modo minimalista
# 1 script usa o cowsay + lolcat para deixar tudo bem colorida
fun=1

# Padrao de cores usado pelo pacote lolcat
lolcat="lolcat --seed 0 --spread 0.6"
lolcatdragon="lolcat --seed 5 --spread 100"

# Cor inicial da contagem lolcat para mostrar na tela
# padrao é 22 para terminar os 120seg na cor vemelha
seed=22

# Arquivos binarios usado pelo script
bicow="/usr/games/cowsay"
